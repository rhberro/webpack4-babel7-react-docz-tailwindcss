{
  "private": true,
  "version": "1.0.0",
  "author": "Rafael Henrique Berro",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --mode development",
    "build": "webpack --mode production",
    "tailwind": "tailwind build source/index.css -c tailwind.js -o source/assets/stylesheets/index.css",
    "test": "standard --verbose | snazzy && jest",
    "cypress": "cypress open",
    "docz:dev": "docz dev",
    "docz:build": "docz build"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "cypress": "^3.1.0",
    "docz": "^0.11.2",
    "docz-plugin-css": "^0.11.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "jest": "^23.6.0",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1",
    "webpack-dev-server": "^3.1.8"
  },
  "dependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.2",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^1.0.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "style-loader": "^0.23.0",
    "tailwindcss": "^0.6.5",
    "webpack": "^4.17.2",
    "webpack-cli": "^3.1.0",
    "prop-types": "^15.6.2",
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "@sentry/browser": "^4.0.5"
  },
  "jest": {
    "setupFiles": [
      "./test/setup.js"
    ],
    "moduleNameMapper": {
      "\\.(svg)$": "raw-loader"
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "source/**/*.test.js",
      "tailwind.js",
      "cypress"
    ],
    "globals": [
      "describe",
      "it"
    ]
  }
}
